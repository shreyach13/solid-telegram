{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "eu-central-1",
    "source_ami_filter": {
      "filters": {
        "virtualization-type": "hvm",
        "name": "ubuntu/images/*ubuntu-bionic-18.04-amd64-server-*",
        "root-device-type": "ebs"
      },
      "owners": ["099720109477"],
      "most_recent": true
    },
    "instance_type": "t2.micro",
    "ssh_username": "ubuntu",
    "ami_name": "eddy_image_run3"
  }],
"provisioners": [{
  "type": "shell",
  "inline": ["echo Downloading zip file",
  "curl https://releases.hashicorp.com/vault/1.2.2/vault_1.2.2_linux_amd64.zip > /tmp/vault_1.2.2_linux_amd64.zip",
  "sudo apt-get install -y unzip",
  "cd /tmp",
  "sudo unzip /tmp/vault_1.2.2_linux_amd64.zip",
  "sudo mv /tmp/vault /usr/local/bin",
  "nohup vault server -dev &"]
  },
  {
    "type": "ansible",
    "playbook_file": "/Users/eddy.niemeijer/mike_foobar/solid-telegram/packer/roles/vault/vault.yml",
    "extra_arguments": [ "-b" ]
  }]
}
